<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="neo.phronesis.touchtanks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:screenOrientation="landscape"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            
            android:name="neo.phronesis.touchtanks.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
           
            android:name="neo.phronesis.touchtanks.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="neo.phronesis.touchtanks.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
           
            android:name="neo.phronesis.touchtanks.Main_game"
            android:label="@string/app_name" >
            
        </activity>
        
          <activity
           
            android:name="neo.phronesis.touchtanks.Settings"
            android:label="@string/app_name" >
            
        </activity>
    </application>

</manifest>